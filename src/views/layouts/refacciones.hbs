<script>

    const busquedaNO = document.getElementById("busquedaNO")


    let array = []
    {{#each Refacciones }}
    array.push({
        IdRefaccion: "{{IdRefaccion}}",
        Descripcion: "{{Descripcion}}"
    })
    {{/each}}

            function buscarNO() {
                const texto = busquedaNO.value.toLowerCase()
                if (texto == "") {
                    document.getElementById("tblh").style.display = "none"
                    for (index = 0; index < array.length; index++) {
                        document.getElementById(array[index].IdRefaccion).style.display = "none"
                    }
                    return
                }
                for (index = 0; index < array.length; index++) {
                    let Descripcion = array[index].Descripcion.toLowerCase()
                    if (Descripcion.indexOf(texto) !== -1) {
                        document.getElementById(array[index].IdRefaccion).style.display = "block"
                        document.getElementById("tblh").style.display = "block"
                    } else {
                        document.getElementById(array[index].IdRefaccion).style.display = "none"
                    }
                }

            }
            busquedaNO.addEventListener("keyup", buscarNO)
            busquedaNO.addEventListener("keydown", buscarNO)


            function Agregar() {
                document.getElementById("btnadd").style.display = "none"
                document.getElementById("form").style.display = "block"

            }

</script>